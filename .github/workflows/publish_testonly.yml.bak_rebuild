name: .github/workflows/publish_testonly.yml

on:
  workflow_dispatch:
  push:
    branches:
      - ci/testpypi-workflow-rmid
    paths:
      - .ci_poke/**
      - .github/workflows/publish_testonly.yml

permissions:
  contents: read

jobs:
  smoke:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Show context
        run: |
          echo "branch=$GITHUB_REF"
          echo "sha=$GITHUB_SHA"
          echo "actor=$GITHUB_ACTOR"
      - name: Python smoke
        run: |
          python3 -V || true
          echo "hello from smoke"
