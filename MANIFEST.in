include pyproject.toml
include README.md
include README.rst
include LICENSE
recursive-include src *.py
recursive-include msrc *.py

# Exclusions: artefacts & archives
global-exclude *.log
prune _tmp
prune backups
prune .ci-archive
global-exclude *.zip *.tar *.tar.gz *.tar.bz2 *.tar.xz
include LICENSE*
global-exclude *.log *.bak *.bak.* *.tmp *.swp *.save
prune dist
prune build
prune docs/_build
