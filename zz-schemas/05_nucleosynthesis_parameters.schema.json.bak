{
"\$schema": "[https://json-schema.org/draft/2020-12/schema](https://json-schema.org/draft/2020-12/schema)",
"\$id": "zz-schemas/05\_nucleosynthesis\_parameters.schema.json",
"title": "Chapter 05 — Nucleosynthesis parameters",
"description": "Schéma pour les fichiers de paramètres BBN (ex.: 05\_nucleosynthesis\_parameters.json). Contient seuils, tolérances et métadonnées utilisées pour générer les sorties liées à la BBN.",
"type": "object",
"properties": {
"generated\_at": {
"description": "Horodatage ISO-8601 de génération (optionnel).",
"type": "string",
"format": "date-time"
},
"producer\_script": {
"description": "Chemin relatif du script producteur (optionnel).",
"type": "string",
"minLength": 1
},
"git\_hash": {
"description": "Hash de commit (optionnel).",
"anyOf": \[{ "type": "string", "minLength": 1 }, { "type": "null" }]
},
"max\_epsilon\_primary": {
"description": "Erreur relative max tolérée pour le régime primaire (haute confiance).",
"type": "number",
"minimum": 0
},
"max\_epsilon\_order2": {
"description": "Erreur relative max tolérée pour le régime d'ordre 2.",
"type": "number",
"minimum": 0
},
"thresholds": {
"description": "Seuils nommés utilisés par les scripts du chapitre 05 (structure homogène inter-chapitres).",
"type": "object",
"properties": {
"primary": { "type": "number", "minimum": 0 },
"order2": { "type": "number", "minimum": 0 }
},
"required": \["primary", "order2"],
"additionalProperties": false
},
"observational\_jalons": {
"description": "Résumé optionnel des jalons observationnels utilisés (DH, Yp, sigmas).",
"type": "array",
"items": {
"type": "object",
"properties": {
"label": { "type": "string" },
"T\_Gyr": { "type": "number", "minimum": 0 },
"DH\_obs": { "type": "number", "exclusiveMinimum": 0 },
"sigma\_DH": { "type": "number", "minimum": 0 },
"Yp\_obs": { "type": "number", "minimum": 0, "maximum": 1 },
"sigma\_Yp": { "type": "number", "minimum": 0 },
"source": { "type": "string" }
},
"required": \["label"],
"additionalProperties": false
}
},
"units": {
"description": "Conventions d'unités (colonne → unité).",
"type": "object",
"additionalProperties": { "type": "string" }
},
"notes": {
"description": "Notes libres (enjeux numériques, clipping, avertissements).",
"type": "string"
}
},
"required": \["max\_epsilon\_primary", "max\_epsilon\_order2", "thresholds"],
"additionalProperties": false,
"examples": \[
{
"generated\_at": "2025-08-23T12:00:00Z",
"producer\_script": "zz-scripts/chapter5/generate\_chapter5\_data.py",
"git\_hash": "REPLACE\_WITH\_GIT\_HASH",
"max\_epsilon\_primary": 0.0085,
"max\_epsilon\_order2": 0.00156,
"thresholds": { "primary": 0.01, "order2": 0.1 },
"observational\_jalons": \[
{
"label": "BBN\_theoretical",
"T\_Gyr": 1e-15,
"DH\_obs": 2.55e-05,
"sigma\_DH": 2.55e-07,
"Yp\_obs": 0.247,
"sigma\_Yp": 0.00247,
"source": "BBN theoretical"
}
],
"units": { "T\_Gyr": "Gyr", "DH": "dimensionless fraction", "Yp": "mass fraction" },
"notes": "Max epsilons choisis selon les règles de tolérance internes du chapitre 5."
}
]
}
